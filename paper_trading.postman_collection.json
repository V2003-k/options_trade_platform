{
  "info": {
    "_postman_id": "1a2b3c4d-5e6f-7a8b-9c0d-1e2f3a4b5c6d",
    "name": "Paper Trading Platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_collection_id": "1a2b3c4d-5e6f-7a8b-9c0d-1e2f3a4b5c6d"
  },
  "item": [
    {
      "name": "User Signup",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"testuser@example.com\",\n    \"password\": \"password123\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://127.0.0.1:8000/auth/signup",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["auth", "signup"]
        },
        "description": "Register a new user. Copy the 'user_id' from the response."
      },
      "response": []
    },
    {
      "name": "User Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"jwt_token\", jsonData.token);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"testuser@example.com\",\n    \"password\": \"password123\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://127.0.0.1:8000/auth/login",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["auth", "login"]
        },
        "description": "Log in an existing user. Saves the JWT token to an environment variable."
      },
      "response": []
    },
    {
      "name": "Get Current User",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/users/me",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["users", "me"]
        },
        "description": "Get details of the currently logged-in user."
      },
      "response": []
    },
    {
      "name": "List Accounts",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if (jsonData.length > 0) {",
              "    pm.environment.set(\"account_id\", jsonData[0].id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/accounts",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["accounts"]
        },
        "description": "List all trading accounts for the current user. Saves the first account's ID to an environment variable."
      },
      "response": []
    },
    {
      "name": "Get Account by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/accounts/{{account_id}}",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["accounts", "{{account_id}}"]
        },
        "description": "Get details of a specific trading account."
      },
      "response": []
    },
    {
      "name": "Place Trade",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"trade_id\", jsonData.id);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"account_id\": \"{{account_id}}\",\n    \"symbol\": \"AAPL\",\n    \"quantity\": 10,\n    \"side\": \"BUY\",\n    \"trigger_point\": 155.0\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://127.0.0.1:8000/trades/place",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["trades", "place"]
        },
        "description": "Place a new trade. Saves the 'id' of the placed trade to an environment variable."
      },
      "response": []
    },
    {
      "name": "Update Trade",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"entry_point\": 150.0\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://127.0.0.1:8000/trades/update/{{trade_id}}",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["trades", "update", "{{trade_id}}"]
        },
        "description": "Update an existing trade's entry point."
      },
      "response": []
    },
    {
      "name": "Close Trade",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/trades/close/{{trade_id}}",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["trades", "close", "{{trade_id}}"]
        },
        "description": "Close an open trade."
      },
      "response": []
    },
    {
      "name": "List Trades",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/trades",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["trades"]
        },
        "description": "List all trades for the current user."
      },
      "response": []
    },
    {
      "name": "Get Trade by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/trades/{{trade_id}}",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["trades", "{{trade_id}}"]
        },
        "description": "Get details of a specific trade by ID."
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:8000"
    }
  ]
}